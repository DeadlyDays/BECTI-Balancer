<Window x:Class="BectiBalancer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:winForms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:BectiBalancer"
        mc:Ignorable="d"
        Title="BECTI List Designer" Height="426.086" Width="1037.25" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Name="thisWorkingList" x:Key="collectionListViewSource" d:DesignSource="{d:DesignInstance {x:Type local:CollectionList}, CreateList=True}"/>
    </Window.Resources>
    <Grid Margin="0,0,5,10" DataContext="{StaticResource collectionListViewSource}" RenderTransformOrigin="0.592,0.536">


        <Label x:Name="lblLog" Content="Log" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Height="31" Width="41"/>
        <DataGrid x:Name="dgViewBalance" SelectionMode="Extended" IsReadOnly="False" Margin="223,125,10,9" BorderBrush="#FFAAAAAA" Background="#FFC3C3C3" SelectionChanged="dgViewBalance_SelectionChanged" AutoGeneratedColumns="dgViewBalance_AutoGeneratedColumns" DataContextChanged="dgViewBalance_DataContextChanged" AutoGenerateColumns="True"/>

        <RichTextBox x:Name="rtbLog" Margin="4,90,0,11" Background="LightGray" IsEnabled="False" HorizontalAlignment="Left" Width="211">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TabControl x:Name="tcTabs1" HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="732">
            <TabItem Header="Import Existing">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="82*"/>
                        <ColumnDefinition Width="281*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblImportFormatedFile" Content="Import Formated File" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="121"/>
                    <Label x:Name="lblListType" Content="List Type" HorizontalAlignment="Left" Margin="126,0,0,0" VerticalAlignment="Top" Height="26" Width="56" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="cbImportFormated" HorizontalAlignment="Left" Margin="22.106,0,0,0" VerticalAlignment="Top" Width="68" Height="22" Grid.Column="1">
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="140"/>
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="140"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="140"/>
                    </ComboBox>
                    <TextBox x:Name="tbImportFilePath" HorizontalAlignment="Left" Height="23" Margin="98.106,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="218" Grid.Column="1"/>
                    <Button x:Name="btnBrowseForFormatedImport" Content="Browse" IsEnabled="True" HorizontalAlignment="Left" Margin="321.106,1,0,0" VerticalAlignment="Top" Width="73" Height="23" Click="btnBrowse_Click" Grid.Column="1"/>
                    <Button x:Name="btnImport" Content="Import" IsEnabled="True" HorizontalAlignment="Left" Margin="394.106,1,0,0" VerticalAlignment="Top" Width="80" Height="23" Click="btnImport_Click" Grid.Column="1"/>
                    <Button x:Name="btnUpdate" Content="Update" Height="23" Width="75" Margin="474.106,1,13,2" RenderTransformOrigin="0.502,0.507" Click="btnUpdate_Click" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Import From CSV">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblTypeOfFile" Content="Type of File:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="73"/>
                    <ComboBox x:Name="cbListTypeNewExport" HorizontalAlignment="Left" Margin="82,2,0,0" VerticalAlignment="Top" Width="94" Height="22">
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="172"/>
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="172"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="172"/>
                    </ComboBox>
                    <TextBox x:Name="tbImportExportPath" HorizontalAlignment="Left" Height="23" Margin="176,2,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
                    <Button x:Name="btnBrowseForNewFromCSV" Content="Browse" HorizontalAlignment="Left" Margin="480,0,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowseForPath_Click" Height="25"/>
                    <Button x:Name="btnCreateNewFileFromList" Content="New File From CSV" HorizontalAlignment="Left" Margin="560,0,0,0" VerticalAlignment="Top" Width="103" Height="25" Click="btnCreateNewFileFromList_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Export as File">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblTypeOfFile_Export" Content="Type of File:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="73"/>
                    <ComboBox x:Name="cbListTypeExport" HorizontalAlignment="Left" Margin="82,2,0,0" VerticalAlignment="Top" Width="94" Height="22">
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="172"/>
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="172"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="172"/>
                    </ComboBox>
                    <TextBox x:Name="tbExportPath" HorizontalAlignment="Left" Height="23" Margin="176,2,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
                    <Button x:Name="btnBrowseForExportPath" Content="Browse" HorizontalAlignment="Left" Margin="480,0,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="btnBrowseForExportPath_Click"/>
                    <Button x:Name="btnExportList" Content="Export as File" IsEnabled="True" HorizontalAlignment="Left" Margin="560,0,0,0" VerticalAlignment="Top" Width="104" Height="25" Click="btnExportList_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Export to Clipboard">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblCopyToClipboard" Content="Copy Output to Clipboard(Instead of to a file); Paste output anywhere:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="380" />
                    <ComboBox x:Name="cbListTypeToClipboard" HorizontalAlignment="Left" Margin="385,4,0,0" VerticalAlignment="Top" Width="94" Height="22">
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="172"/>
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="172"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="172"/>
                    </ComboBox>
                    <Button x:Name="btnCopyToClipboard" Content="To Clipboard" IsEnabled="True" HorizontalAlignment="Left" Margin="490,4,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="btnCopyToClipboard_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="DB Connect">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblConnectToDB" Content="Connect to a Database" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="130"/>
                    <Label x:Name="lblAddress" Content="Address:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="55" Margin="130,0,0,0"/>
                    <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="488,0,0,0" VerticalAlignment="Top" Height="26" Width="66" RenderTransformOrigin="0.254,0.125"/>
                    <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="664,0,0,0" VerticalAlignment="Top" Height="26" Width="62"/>
                    <Label x:Name="lblDBName" Content="Database Name:" HorizontalAlignment="Left" Margin="291,0,0,0" VerticalAlignment="Top" Height="26" Width="97"/>
                    <TextBox x:Name="tbAddress" HorizontalAlignment="Left" Height="23" Margin="186,3,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
                    <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Height="23" Margin="559,3,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
                    <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="731,3,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
                    <TextBox x:Name="tbDBName" HorizontalAlignment="Left" Height="23" Margin="388,3,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
                    <Button x:Name="btnConnect" Content="Connect" IsEnabled="False" HorizontalAlignment="Left" Margin="836,6,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="btnConnect_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Convert">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblConvertInstructions" Content="Select From the list before using any of the Export buttons or the Update Button in Import Existing"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="529"/>
                    <ComboBox x:Name="cbVersion" HorizontalAlignment="Left" Margin="615,2,0,2"  Width="101" Height="22">
                        <ComboBoxItem Content="Current" HorizontalAlignment="Left" Width="140"/>
                        <ComboBoxItem Content="Reformatted" HorizontalAlignment="Left" Width="140"/>
                    </ComboBox>
                    <Label x:Name="lblConvert" Content="Convert to?" HorizontalAlignment="Left" Margin="545,2,0,1"/>

                </Grid>
            </TabItem>



        </TabControl>



        <TabControl x:Name="tbTabs2" HorizontalAlignment="Left" Height="71" Margin="223,54,0,0" VerticalAlignment="Top" Width="791">

            <TabItem Header="Filter">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblFilter" Content="Select a Type, then Type in Filter Keyword and hit enter or tab out. Clear Filter before attempting to export." HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="579" Margin="0,-3,0,0"/>
                    <TextBox x:Name="tbFilterText" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="225" Margin="116,20,0,0" LostKeyboardFocus="tbFilterText_LostKeyboardFocus" KeyDown="tbFilterText_KeyDown"/>
                    <ComboBox x:Name="cbFilterType" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="101">
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="99"/>
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="99"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="99"/>
                    </ComboBox>
                    <Button x:Name="btnClearFilter" Content="Clear Filter" HorizontalAlignment="Left" Margin="364,0,0,1.333"  Width="99" Height="23" VerticalAlignment="Bottom" Click="btnClearFilter_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="Mass Edit">
                <Grid Background="#FFE5E5E5">
                    <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Mass Edit: Highlight Rows then use dropbox to select column. Write new Value in Text Box and hit Edit" VerticalAlignment="Top" Height="30" Width="293"/>
                    <TextBox x:Name="txtEditValue" HorizontalAlignment="Left" Height="23" Margin="539,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" GotFocus="txtEditValue_GotFocus"/>
                    <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="659,15,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="btnEdit_Click"/>
                    <Label x:Name="lblEditValue" Content="Change Value to:" HorizontalAlignment="Left" Margin="534,-6,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblColumn" Content="Edit Column" HorizontalAlignment="Left" Margin="394,-5,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblEditType" Content="List Type Editing" HorizontalAlignment="Left" Margin="293,-6,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbEditColumn" HorizontalAlignment="Left" Margin="399,16,0,0" VerticalAlignment="Top" Width="140"/>
                    <ComboBox x:Name="cbEditType" HorizontalAlignment="Left" Margin="298,16,0,0" VerticalAlignment="Top" Width="101">
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="99"/>
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="99"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="99"/>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Tagging/Commenting">
                <Grid Background="#FFE5E5E5">
                    <TextBlock x:Name="tbTextTagging" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tagging: Add a new Tag. The input format is Name:Value As an example Caliber:5.56mm" VerticalAlignment="Top" Height="43" Width="269"/>
                    <Label x:Name="lblTypeAddColumn" Content="Type:" HorizontalAlignment="Left" Margin="274,-3,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbTypeAddColumn" HorizontalAlignment="Left" Margin="274,19,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem Content="Ammo" HorizontalAlignment="Left" Width="118"/>
                        <ComboBoxItem Content="Unit" HorizontalAlignment="Left" Width="118"/>
                        <ComboBoxItem Content="Gear" HorizontalAlignment="Left" Width="118"/>
                    </ComboBox>
                    <TextBox x:Name="tbAddColumn" HorizontalAlignment="Left" Height="23" Margin="399,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="lblAddTag" Content="Tag:" HorizontalAlignment="Left" Margin="399,-3,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="btnAddColumn" Content="Add Column" HorizontalAlignment="Left" Margin="543,18,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="btnAddColumn_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label x:Name="lblVersion" Content="Version:" HorizontalAlignment="Left" Margin="786,0,0,0" VerticalAlignment="Top" Background="White" Foreground="Black" FontFamily="Segoe UI Black" Width="145"/>




    </Grid>
</Window>
